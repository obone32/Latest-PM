@model CloudTrixApp.Models.ProjectStatus

@{
    ViewBag.Title = "Create Project Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wraper container-fluid ">
    <div class="row">
        <div class="col col-md-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create Project Status </h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ProjectStatusID)

                            <div class="container-fluid">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="ProjectStatusName"> Project Status Name : </label>
                                        @Html.TextBoxFor(model => model.ProjectStatusName, null, new { @class = "form-control ", @placeholder = "Enter Project Status Name " })
                                        @Html.ValidationMessageFor(model => model.ProjectStatusName)
                                    </div>
                                </div>
                            </div>

                            <div class="container-fluid">
                                <div><hr size=2><br /></div>
                                <div class="col-sm-4 col-lg-offset-4">
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-success" />
                                        &nbsp;&nbsp;
                                        @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

