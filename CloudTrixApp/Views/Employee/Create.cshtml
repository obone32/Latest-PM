                            <div class="form-group">
                                @Html.LabelFor(model => model.AddDate, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.AddDate, new { @class = "datepicker" })
                                    @Html.ValidationMessageFor(model => model.AddDate)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ArchiveUserID, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ArchiveUserID)
                                    @Html.ValidationMessageFor(model => model.ArchiveUserID)
