                            <div class="form-group">
                                @Html.LabelFor(model => model.ArchiveDate, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ArchiveDate, new { @class = "datepicker" })
                                    @Html.ValidationMessageFor(model => model.ArchiveDate)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
<script src="~/Scripts/AppJquery/DateTimePicker/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
        $('#EmployeeDOJ').datepicker({
            format: 'mm/dd/yyyy',
            startDate: '-10y'
        });

        $('#EmployeeDOB').datepicker({
            format: 'mm/dd/yyyy',
            startDate: new Date('1900-1-5'),
            endDate: new Date('2009-12-31')
        });
</script>
}

